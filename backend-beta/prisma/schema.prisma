// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//creamos las tablas para migrarlas
model PaqueteDeVuelo {
  id             Int     @id @default(autoincrement())
  nombre_paquete String
  descripcion    String
  imagen         String?
  duracion       Int
  precio         Float
  estado         Boolean
  urlImagen      String?
  reservas       Reserva[]// Relación de uno a muchos con Reserva
}

model FormasPago {
  id          Int     @id @default(autoincrement())
  nombre      String
  descripcion String
  estado      Boolean
  imagen      String?
  urlImagen   String?
  numero      Int
  cci         String
  reservas    Reserva[] // Relación de uno a muchos con Reserva
}

model estado_pago {
  id          Int    @id @default(autoincrement())
  nombre      String
  descripcion String
  reservas    Reserva[]  // Relación de uno a muchos con Reserva
}

// En lugar de Sequelize, usando Prisma para definir el modelo de usuario

model Reserva {
  id              Int             @id @default(autoincrement())
  fechaInicio     DateTime
  nombreCliente   String
  cantidadPasajeros Int
  telefonoCliente String
  correoCliente   String
  imagenComprobante String?
  paqueteDeVuelo  PaqueteDeVuelo  @relation(fields: [paqueteDeVueloId], references: [id])
  paqueteDeVueloId Int
  formaPago       FormasPago      @relation(fields: [formaPagoId], references: [id])
  formaPagoId     Int
  estadoPago      estado_pago     @relation(fields: [estadoPagoId], references: [id])
  estadoPagoId    Int 
  // Relaciones con otras tablas
}